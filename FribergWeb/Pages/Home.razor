@page "/"

@inject CarService carService


<PageTitle>Home</PageTitle>
<div class="w-full grid xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4 p-4">
  @foreach (var car in cars)
  {
    <div class="card w-full bg-base-200 shadow-md">
      <div class="card-body flex flex-col gap-2">
        <h2 class="card-title"><span>@car.Make</span> <span>@car.Model</span></h2>
        <p>HP: @car.HorsePower</p>
        <p>Year: @car.Year</p>
        @if (car.Deleted)
        {
          <p class="text-error">DELETED</p>
        }
        <div class="justify-end card-actions flex flex-row gap-2">
          <a href="/rent/@car.Id" class="btn btn-primary">Rent</a>
          <AuthorizeView Roles="@ApiRoles.Admin">
            <Authorized>
              <a href="/edit/@car.Id" class="btn btn-secondary">Edit</a>
            </Authorized>
          </AuthorizeView>
        </div>
      </div>
    </div>
  }
   <div class="card w-full bg-base-200 shadow-md">
      <div class="card-body flex flex-col gap-2">
       <NavLink class="w-full h-full btn btn-primary" href="/create">Create</NavLink>
      </div>
    </div>
</div>


@code {
  List<FullCarDto> cars = [];

  protected override async Task OnInitializedAsync()
  {
    cars = await carService.GetCarsAsync();
  }
}